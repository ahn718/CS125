package lecture;

public class ACMGonnaGetYou002 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		double owe = 1000.0;
		double interestRate = 0.20;
		int numberOfMonths = 0;
		int x = 1;
		x = x++;
		System.out.println(x);
		int y = 0;

		while (owe <= 12000.0) {
			double interestThisMonth = owe * interestRate;
			owe += interestThisMonth;
			interestRate += 0.05;
			numberOfMonths++;

			System.out.printf("At the end of month: " + numberOfMonths + " the amount we owe is $%1.2f", owe);
			System.out.println();

		}
	}
}
